* {
	font-family: JetBrains Mono Nerd Font Mono, monospace;
	font-weight: bold;
	font-size: 16px;
	border: none;
	border-radius: 0;
	min-height: 0;
}

window#waybar {
	background: rgba(21, 18, 27, 0.5);
	padding: 10px;
	color: __FG__;
}

tooltip {
	background: __LIGHTERBG__;
	border-radius: 10px;
	border-bottom: 4px solid __LIGHTBG__;
}

#workspaces,
#window,
#wireplumber,
#backlight,
#cpu,
#memory,
#network,
#battery,
#custom-prayer,
#network,
#clock {
	color: __BG__;
	border-radius: 8px;
	padding: 0px 10px;
	margin: 6px 0px;
	margin-right: 10px;
}

#window {
	background: __LIGHTERBG__;
	color: __FG__;
	border-bottom: 4px solid __LIGHTBG__;
}

#workspaces {
	background: __LIGHTERBG__;
	border-bottom: 4px solid __LIGHTBG__;
	margin-left: 10px;
	padding-right: 0px;
	padding-left: 5px;
}

#workspaces button label {
	font-size: 20px;
}

#workspaces button {
	color: __COL2__;
}

#workspaces button.empty {
	color: __DIMMERCOL2__;
}

#workspaces button.active label {
	text-decoration: underline;
}

#workspaces button.urgent {
	color: __LIGHTBG__;
	background: __COL4__;
}

#workspaces button:hover {
	background: none;
	border: none;
	box-shadow: none;
	text-shadow: none;
}

#memory, #clock {
	background: __COL1__;
	border-bottom: 4px solid __DIMCOL1__;
}

#wireplumber, #network {
	background: __COL2__;
	border-bottom: 4px solid __DIMCOL2__;
}

#backlight, #battery {
	background: __COL4__;
	border-bottom: 4px solid __DIMCOL4__;
}

#cpu, #custom-prayer {
	background: __COL5__;
	border-bottom: 4px solid __DIMCOL5__;
}

